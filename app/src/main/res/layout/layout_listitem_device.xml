<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="335dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="57.25dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24.25dp"
            android:src="@drawable/selector_btn_agree"
            android:id="@+id/list_item_check"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/list_item_check"
            android:layout_marginLeft="24.25dp"
            android:layout_marginRight="18.25dp"
            android:textSize="22dp"
            android:textColor="@color/colorFF2F2F2F"
            android:id="@+id/list_item_device_name"/>

    </RelativeLayout>

</LinearLayout>