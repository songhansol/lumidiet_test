<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/activity_main_disconnect" >

    <RelativeLayout
        android:id="@+id/main_rl_pedometer_data"
        android:visibility="visible"
        android:layout_below="@id/main_img_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="5dp"
                    android:text="@string/today_stepcount"
                    android:textAlignment="center"
                    android:textColor="@color/colorFF2C2C2C"
                    android:textSize="10.5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:textAlignment="center"
                    android:textColor="@color/colorFF2C2C2C"
                    android:textSize="10.5dp" />

                <TextView
                    android:id="@+id/tvTodaySteps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="5dp"
                    android:textStyle="bold"
                    android:text="4,554"
                    android:textAlignment="center"
                    android:textColor="@color/colorFF2C2C2C"
                    android:textSize="10.5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="5dp"
                    android:text="@string/cumulative_stepcount"
                    android:textAlignment="center"
                    android:textColor="@color/colorFF2C2C2C"
                    android:textSize="10.5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:textAlignment="center"
                    android:textColor="@color/colorFF2C2C2C"
                    android:textSize="10.5dp" />

                <TextView
                    android:id="@+id/tvMaxSteps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="5dp"
                    android:textStyle="bold"
                    android:text="14,454"
                    android:textAlignment="center"
                    android:textColor="@color/colorFF2C2C2C"
                    android:textSize="10.5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="5dp"
                    android:text="@string/cumulative_ranking"
                    android:textAlignment="center"
                    android:textColor="@color/colorFF2C2C2C"
                    android:textSize="10.5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:textAlignment="center"
                    android:textColor="@color/colorFF2C2C2C"
                    android:textSize="10.5dp" />

                <TextView
                    android:id="@+id/tvStepsRanking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="5dp"
                    android:textStyle="bold"
                    android:text="131"
                    android:textAlignment="center"
                    android:textColor="@color/colorFF2C2C2C"
                    android:textSize="10.5dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:visibility="gone"
        android:layout_below="@id/main_img_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/pedometer_off"
        android:textSize="13.75dp"
        android:textColor="@color/color992C2C2C"
        android:id="@+id/main_txt_Pedometer_off" />
</merge>