<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/activity_width"
    android:layout_height="@dimen/activity_height"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="335dp"
        android:layout_height="320dp"
        android:background="@color/colorFFFFFFFF"
        android:id="@+id/popup_type1_bg">

        <com.viewpagerindicator.CirclePageIndicator
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="263.75dp"
            android:layout_centerHorizontal="true"
            android:gravity="bottom"
            android:padding="10dp"
            app:centered="true"
            app:fillColor="@color/colorFF00BD47"
            app:pageColor="@color/colorFFBCBCBC"
            app:snap="false"
            android:id="@+id/popup_type1_indicator"/>

        <android.support.v4.view.ViewPager
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/popup_type1_pager"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="62.5dp"
        android:layout_below="@+id/popup_type1_bg"
        android:layout_alignStart="@+id/popup_type1_bg">

        <RelativeLayout
            android:layout_width="335dp"
            android:layout_height="62.5dp"
            android:background="@color/colorFF0CCB54"
            android:layout_weight="1"
            android:visibility="gone"
            android:id="@+id/popup_type1_btn_cancel">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/common_bottom_vline"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/dont_show_again"
                android:textSize="20dp"
                android:textColor="@color/colorFFFFFFFF"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="335dp"
            android:layout_height="62.5dp"
            android:background="@color/colorFF0CCB54"
            android:layout_weight="1"
            android:id="@+id/popup_type1_btn_ok">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/ok"
                android:textSize="20dp"
                android:textColor="@color/colorFFFFFFFF"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
