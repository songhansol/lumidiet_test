<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/activity_width"
    android:layout_height="@dimen/activity_height"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="335dp"
        android:layout_height="224.5dp"
        android:background="@color/colorFFFFFFFF"
        android:id="@+id/popup_type6_bg">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22.25dp"
            android:src="@drawable/popup_ldi_icon"
            android:id="@+id/popup_type6_img_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/popup_type6_img_icon"
            android:layout_marginTop="18.25dp"
            android:gravity="center"
            android:text="@string/alert_unused_week_over"
            android:textColor="@color/colorFF2F2F2F"
            android:textSize="15dp"
            android:lineSpacingExtra="6dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="335dp"
        android:layout_height="62.5dp"
        android:layout_below="@id/popup_type6_bg"
        android:background="@color/colorFF0CCB54"
        android:id="@+id/popup_type6_btn_ok">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/ok"
            android:textSize="20dp"
            android:textColor="@color/colorFFFFFFFF"/>

    </RelativeLayout>

</RelativeLayout>
