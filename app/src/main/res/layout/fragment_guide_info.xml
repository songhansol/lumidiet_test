<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:clickable="true"
    tools:context="com.doubleh.lumidiet.GuideInfoFragment">

    <RelativeLayout
        android:layout_width="@dimen/activity_width"
        android:layout_height="@dimen/activity_height">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="84.75dp"
            android:layout_marginLeft="14.75dp"
            android:includeFontPadding="false"
            android:text="@string/guide_title"
            android:textSize="15dp"
            android:textColor="@color/colorFF2F2F2F"
            android:id="@+id/guide_txt_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/guide_txt_title"
            android:layout_below="@id/guide_txt_title"
            android:layout_marginTop="8.75dp"
            android:includeFontPadding="false"
            android:text="@string/guide_body"
            android:textSize="12.5dp"
            android:textColor="@color/colorFF2F2F2F"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/selector_btn_bottom"
            android:clickable="true"
            android:id="@+id/guide_btn_jump">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/jump"
                android:textSize="20dp"
                android:textColor="@color/colorFFFFFFFF"
                android:id="@+id/guide_txt_jump"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12.5dp"
                android:layout_toRightOf="@id/guide_txt_jump"
                android:background="@drawable/common_bottom_arrow_nor"
                android:id="@+id/guide_img_jump"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/guide_btn_jump"
            android:layout_marginBottom="19dp"
            android:clickable="true"
            android:background="@drawable/selector_btn_delete"
            android:id="@+id/guide_btn_read">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/delete_check_focus"
                    android:id="@+id/guide_img_check"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.5dp"
                    android:layout_toRightOf="@id/guide_img_check"
                    android:text="@string/read_guide"
                    android:textColor="@color/colorFF2F2F2F"
                    android:textSize="18dp"/>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>
